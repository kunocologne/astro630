{
  "name": "SPECTRUM Design System - Dual Mode",
  "version": "3.0.0",
  "description": "Unified design system with light and dark modes, consistent orange accent throughout",

  "colors": {
    "primary": {
      "orange": "#FF6B35",
      "orangeLight": "#FF8C61",
      "orangeDark": "#E55A2B"
    },
    "light": {
      "background": "#FFFFFF",
      "backgroundAlt": "#F9FAFB",
      "foreground": "#111827",
      "foregroundSecondary": "#4B5563",
      "foregroundTertiary": "#6B7280",
      "border": "#E5E7EB",
      "borderHover": "#FF6B35",
      "card": "#FFFFFF",
      "cardHover": "#FFFFFF",
      "input": "#FFFFFF",
      "muted": "#F3F4F6",
      "mutedForeground": "#6B7280"
    },
    "dark": {
      "background": "#000000",
      "backgroundAlt": "#111827",
      "foreground": "#FFFFFF",
      "foregroundSecondary": "#E5E7EB",
      "foregroundTertiary": "#9CA3AF",
      "border": "rgba(255, 255, 255, 0.1)",
      "borderHover": "#FF6B35",
      "card": "rgba(255, 255, 255, 0.05)",
      "cardHover": "rgba(255, 255, 255, 0.1)",
      "input": "rgba(255, 255, 255, 0.1)",
      "muted": "rgba(255, 255, 255, 0.05)",
      "mutedForeground": "#9CA3AF"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },

  "spacing": {
    "scale": "8px base",
    "section": {
      "mobile": "3rem",
      "desktop": "5rem"
    }
  },

  "borderRadius": {
    "sm": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "light": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    },
    "dark": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.5)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.7)"
    }
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms",
      "slower": "700ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },

  "components": {
    "card": {
      "light": {
        "background": "rgba(255, 255, 255, 0.8)",
        "backdropFilter": "blur(10px)",
        "border": "1px solid rgba(255, 255, 255, 0.6)",
        "borderRadius": "1rem",
        "padding": "1.5rem",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.1)",
        "hover": {
          "background": "rgba(255, 255, 255, 0.95)",
          "border": "1px solid #FF6B35",
          "boxShadow": "0 12px 40px rgba(255, 107, 53, 0.15)",
          "transform": "translateY(-4px)"
        }
      },
      "dark": {
        "background": "rgba(255, 255, 255, 0.08)",
        "backdropFilter": "blur(20px)",
        "border": "1px solid rgba(255, 255, 255, 0.15)",
        "borderRadius": "1rem",
        "padding": "1.5rem",
        "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.3)",
        "hover": {
          "background": "rgba(255, 255, 255, 0.12)",
          "border": "1px solid #FF6B35",
          "boxShadow": "0 12px 40px rgba(255, 107, 53, 0.2)",
          "transform": "translateY(-4px)"
        }
      }
    },

    "button": {
      "primary": {
        "background": "#FF6B35",
        "color": "#FFFFFF",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "0.875rem",
        "fontWeight": 600,
        "hover": {
          "background": "#E55A2B",
          "transform": "translateY(-1px)",
          "shadow": "0 4px 6px rgba(255, 107, 53, 0.3)"
        }
      },
      "secondary": {
        "light": {
          "background": "transparent",
          "color": "#111827",
          "border": "1px solid #E5E7EB",
          "hover": {
            "background": "#F9FAFB"
          }
        },
        "dark": {
          "background": "transparent",
          "color": "#FFFFFF",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "hover": {
            "background": "rgba(255, 255, 255, 0.05)"
          }
        }
      }
    },

    "input": {
      "light": {
        "background": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "color": "#111827",
        "placeholder": "#9CA3AF",
        "focus": {
          "border": "#FF6B35",
          "ring": "0 0 0 3px rgba(255, 107, 53, 0.1)"
        }
      },
      "dark": {
        "background": "rgba(255, 255, 255, 0.1)",
        "border": "1px solid rgba(255, 255, 255, 0.2)",
        "color": "#FFFFFF",
        "placeholder": "rgba(255, 255, 255, 0.5)",
        "focus": {
          "border": "#FF6B35",
          "ring": "0 0 0 3px rgba(255, 107, 53, 0.2)"
        }
      }
    },

    "badge": {
      "light": {
        "background": "#F3F4F6",
        "color": "#6B7280"
      },
      "dark": {
        "background": "rgba(255, 255, 255, 0.1)",
        "color": "rgba(255, 255, 255, 0.8)"
      }
    }
  },

  "sections": {
    "light": {
      "backgrounds": ["#FFFFFF", "#F9FAFB"]
    },
    "dark": {
      "backgrounds": ["#000000", "#111827"]
    }
  },

  "designPrinciples": {
    "consistency": "Same orange accent (#FF6B35) in both modes",
    "contrast": "High contrast ratios for accessibility",
    "transitions": "Smooth mode switching with 300ms transitions",
    "simplicity": "Clean, minimal design in both modes",
    "accessibility": "WCAG AA compliant in both modes"
  }
}
