{
  "name": "juno",
  "version": "1.0.0",
  "description": "Premium Next.js 15 + Payload CMS E-Commerce Boilerplate",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "payload-cms",
    "ecommerce",
    "boilerplate",
    "typescript",
    "tailwind"
  ],
  "author": "JUNO Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/juno.git"
  },
  "homepage": "https://juno.dev",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "check:performance": "bun run scripts/check-performance.ts",
    "optimize-images": "bun run scripts/optimize-images.ts",
    "prepare": "husky",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:mobile": "./scripts/start-dev.sh",
    "dev:safe": "bun run check && bun run dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && bun run build && bun run start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "lint:a11y": "cross-env NODE_OPTIONS=--no-deprecation next lint --config eslint.config.mjs",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm bun.lock && bun install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "stripe-webhooks": "stripe listen --forward-to localhost:3000/api/stripe/webhooks",
    "test": "bun run test:int && bun run test:e2e && bun run test:a11y",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" bun exec playwright test tests/e2e/",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "test:a11y": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" bun exec playwright test tests/accessibility.test.tsx",
    "test:accessibility": "bun run test:a11y",
    "test:performance": "lighthouse-ci",
    "test:all": "bun run test:int && bun run test:e2e && bun run test:accessibility && bun run test:performance",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next node_modules bun.lock .DS_Store && find . -name '.DS_Store' -delete",
    "clean:ports": "lsof -ti:3000,3001,3002,3003,3004,3005 | xargs kill -9 2>/dev/null || echo 'All ports are free'",
    "stop:all": "pkill -f 'bun.*dev' && pkill -f 'next.*dev' && pkill -f 'ngrok' && echo 'All development processes stopped'",
    "status": "ps aux | grep -E '(bun.*dev|next.*dev|ngrok)' | grep -v grep || echo 'No development processes running'",
    "security-check": "bun audit",
    "generate-site": "cd cli && node create-site.js",
    "fix-all": "bun run lint:fix && bun run format && bun run typecheck",
    "check-and-fix": "bun run fix-all && bun run check",
    "pre-commit": "bun run check-and-fix",
    "deploy": "./scripts/deploy.sh",
    "deploy:safe": "bun run check && bun run deploy"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@gsap/react": "^2.1.2",
    "@mui/icons-material": "^7.3.4",
    "@mui/lab": "^7.0.1-beta.18",
    "@mui/material": "^7.3.4",
    "@mui/utils": "^7.3.3",
    "@payloadcms/admin-bar": "3.58.0",
    "@payloadcms/db-postgres": "3.58.0",
    "@payloadcms/db-sqlite": "3.58.0",
    "@payloadcms/email-nodemailer": "3.58.0",
    "@payloadcms/live-preview-react": "3.58.0",
    "@payloadcms/next": "3.58.0",
    "@payloadcms/plugin-ecommerce": "3.58.0",
    "@payloadcms/plugin-form-builder": "3.58.0",
    "@payloadcms/plugin-seo": "3.58.0",
    "@payloadcms/richtext-lexical": "3.58.0",
    "@payloadcms/translations": "3.58.0",
    "@payloadcms/ui": "3.58.0",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-accordion": "1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@sentry/nextjs": "^10.20.0",
    "@stripe/react-stripe-js": "^3",
    "@stripe/stripe-js": "^4.0.0",
    "@studio-freight/lenis": "^1.0.42",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^8.2.0",
    "embla-carousel-auto-scroll": "^8.1.5",
    "embla-carousel-react": "^8.5.2",
    "framer-motion": "^12.23.24",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "gsap": "^3.13.0",
    "jsonwebtoken": "9.0.1",
    "lenis": "^1.3.11",
    "lucide-react": "^0.477.0",
    "next": "^15.5.4",
    "next-themes": "0.4.6",
    "payload": "3.58.0",
    "prism-react-renderer": "^2.3.1",
    "qs-esm": "^7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "7.54.1",
    "react-hot-toast": "^2.6.0",
    "react-intersection-observer": "^9.16.0",
    "react-loading-skeleton": "^3.5.0",
    "resend": "^6.1.2",
    "sharp": "^0.34.4",
    "sonner": "^1.7.2",
    "stripe": "18.5.0",
