{
  "name": "JUNO Design Tokens",
  "version": "2.0.0",
  "description": "Design tokens for JUNO template system",

  "colors": {
    "semantic": {
      "primary": {
        "portfolio": "#6366f1",
        "saas": "#2563eb",
        "agency": "#1f2937"
      },
      "secondary": {
        "portfolio": "#8b5cf6",
        "saas": "#06b6d4",
        "agency": "#6b7280"
      },
      "background": {
        "portfolio": "#fafafa",
        "saas": "#eff6ff",
        "agency": "#ffffff"
      },
      "text": {
        "primary": "#0f172a",
        "secondary": "#64748b",
        "muted": "#94a3b8"
      }
    },
    "neutral": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827"
    }
  },

  "typography": {
    "font_families": {
      "heading": "Inter, system-ui, sans-serif",
      "body": "Inter, system-ui, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "font_sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "font_weights": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "line_heights": {
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    }
  },

  "spacing": {
    "scale": "1.5",
    "base": "1rem",
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem",
    "5xl": "8rem"
  },

  "breakpoints": {
    "mobile": "320px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "base": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
  },

  "border_radius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },

  "animations": {
    "durations": {
      "fast": "0.15s",
      "normal": "0.3s",
      "slow": "0.5s",
      "slower": "0.75s"
    },
    "easings": {
      "linear": "linear",
      "ease": "ease",
      "ease_in": "ease-in",
      "ease_out": "ease-out",
      "ease_in_out": "ease-in-out"
    },
    "transitions": {
      "fade": "opacity 0.3s ease",
      "slide": "transform 0.3s ease",
      "scale": "transform 0.3s ease",
      "all": "all 0.3s ease"
    }
  },

  "z_index": {
    "hide": "-1",
    "auto": "auto",
    "base": "0",
    "docked": "10",
    "dropdown": "1000",
    "sticky": "1100",
    "banner": "1200",
    "overlay": "1300",
    "modal": "1400",
    "popover": "1500",
    "skipLink": "1600",
    "toast": "1700",
    "tooltip": "1800"
  }
}
