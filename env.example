# ============================================
# JUNO - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ============================================
# DATABASE
# ============================================
DATABASE_URI=postgresql://postgres:password@localhost:5432/juno

# ============================================
# PAYLOAD CMS
# ============================================
PAYLOAD_SECRET=your-secret-key-generate-with-openssl-rand-base64-32
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# ============================================
# NEXT.JS PUBLIC VARIABLES
# ============================================
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# ============================================
# STRIPE PAYMENT
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOKS_SIGNING_SECRET=whsec_your_webhook_secret

# ============================================
# PREVIEW & DRAFTS
# ============================================
PREVIEW_SECRET=demo-draft-secret

# ============================================
# OPTIONAL
# ============================================
COMPANY_NAME="Your Company"
SITE_NAME="Your Store"
TWITTER_CREATOR="@yourusername"
TWITTER_SITE="https://yourdomain.com"
